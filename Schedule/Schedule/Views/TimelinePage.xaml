<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:Schedule.Models"
			 x:Class="Schedule.Views.TimelinePage">

    <ListView ItemsSource="{Binding Items}" HasUnevenRows="True" IsGroupingEnabled="true">
        
        <ListView.GroupHeaderTemplate>
            <DataTemplate>
                <ViewCell>
                    <Label Text="{Binding ThisDate, StringFormat='{}{0:dddd, dd MMMM yyyy}'}" />
                </ViewCell>
            </DataTemplate>
        </ListView.GroupHeaderTemplate>

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <Frame Margin="5, 5, 5, 5" CornerRadius="10" Padding="0">
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Padding="5, 0" BackgroundColor="#262626">
                                    <Label Text="{Binding CoupleNum}" FontSize="Large" HorizontalOptions="StartAndExpand" VerticalOptions="Center" TextColor="#EBB30D"/>
                                    <StackLayout Orientation="Vertical" HorizontalOptions="End">
                                        <Label Text="{Binding TimeBegin}" FontSize="Medium" VerticalOptions="Start" TextColor="#EBB30D"/>
                                        <Label Text="{Binding TimeEnd}" FontSize="Micro"  VerticalOptions="EndAndExpand" HorizontalOptions="End" TextColor="#EBB30D"/>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout Padding="5, 0">
                                    <Label Text="{Binding CoupleName}" FontSize="Medium" TextColor="#262626"/>
                                    <Label Text="{Binding CoupleTeacher}" FontSize="Small" TextColor="#262626"/>
                                    <Label Text="{Binding CoupleAud}" FontSize="Small" TextColor="#262626"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
</ContentPage>